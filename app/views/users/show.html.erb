<div class="users-show-page p-3">
  <div>
    <h1 class="text-center">User Profile</h1>
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md- 4">
                <img <%= has_profile_image("img") %> class="" alt="User Image">
              </div>
              <div class="col-md-8">
                <h3><%= @user.name %></h3>
                <p><%= @user.created_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="register">
  <%= render "home/logo" %>
  <div class="register-container">
		<%= form_for @user, url: users_path do |f| %>
			<h1>REGISTER</h1>
			<%= f.text_field :name, placeholder: "Full Name", autocomplete: 'off', required: true %>

			<%= f.text_field :username, placeholder: "Username", autocomplete: 'off', required: true %>

			<%= f.password_field :password, placeholder: "Password", autocomplete: 'off', required: true %>

      		<%= f.password_field :password_confirmation, placeholder: "Retype Password", autocomplete: 'off', required: true  %>

			<%= f.submit "Register" %>
			<% if @user.errors.any? %>
				<% @user.errors.full_messages.each do |message| %>
					<p><%= message %></p>
				<% end %>
			<% end %>
		<% end %>
  </div>
</div>

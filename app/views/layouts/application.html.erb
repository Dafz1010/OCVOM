<!DOCTYPE html>
<html>
  <head>
    <title>OCVOM</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= controller_stylesheet_link_tag %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if current_user %>
      <div class="dashboard">
        <%= render "home/logo" %>
          <div class="navigation">
            <div class="profilepic">
            </div>
            <div class="nav-item">
              <%= link_to root_path, class: "item-button" do %>
                <div class="material-icons item-logo">dashboard</div> DASHBOARD  
              <% end %>
            </div>
            <div class="nav-item">
              <%= link_to records_path, class: "item-button" do %>
                <div class="material-icons item-logo">view_list</div> RECORDS  
              <% end %>
              <div class="nav-subitem-container">
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Dog Profile
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Adoption
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Vaccinated
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Sick Dogs
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Disposed
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="nav-item">
              <%= link_to scan_path, class: "item-button" do %> 
                <div class="material-icons item-logo">flip</div> SCAN  
              <% end %>
              <div class="nav-subitem-container">
                <div class="nav-subitem">
                  <%= link_to root_path, class: "subitem-button" do %>
                    Dog Profile
                    <div class="material-icons">chevron_right</div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>OCVOM</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= controller_stylesheet_link_tag %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if current_user %>
      <div class="dashboard">
        <%= render "home/logo" %>
          <div class="navigation">
            <div class="profilepic">
            </div>
            <div class="nav-item">
              <%= link_to "<div class=\"material-icons item-logo\">dashboard</div> DASHBOARD".html_safe, root_path, class: "item-button" %>
            </div>
            <div class="nav-item">
              <%= link_to "<div class=\"material-icons item-logo\">view_list</div> RECORDS".html_safe, records_path, class: "item-button" %>
            </div>
            <div class="nav-item">
              <%= link_to "<div class=\"material-icons item-logo\">flip</div> SCAN".html_safe, scan_path, class: "item-button" %>
            </div>
          </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

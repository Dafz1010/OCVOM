<div class="records-page g-0 d-flex flex-column" >
	<div class="col-12 d-flex flex-wrap h-25">
		<div class="col-12" >
			<div class="col-3 h-100 d-flex justify-content-center align-items-center fs-3 border border-primary ms-2 rounded" >Total Records: <%= @total_records %></div>
		</div>
	</div>
	<div class="col-12 row g-0 h-75">
		<div class="records-container col-8 h-100 px-2" >
			<div class="col-12 p-2 d-flex justify-content-between">
				<div>Latest Records</div>
				<div>[Search button]</div>
			</div>
			<div class="col-12 h-100 overflow-scroll" >
				<table class="table">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">KIND/BREED</th>
							<%# <th scope="col">OWNER</th> %>
							<th scope="col">ADDRESS</th>
							<th scope="col">STATUS</th>
							<th scope="col">CONDITION</th>
							<th scope="col">DATE</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% @records.each do |record|%>
							<tr>
								<td><%= record.public_id %></td>
								<td><%= record.breed_name %></td>
								<%# <td>[Owner_Name]</td> %>
								<td><%= record.location %></td>
								<td><%= record.status %></td>
								<td><%= record.condition_name %></td>
								<td><%= record.created_at.strftime("%b %d, %Y") %></td>
								<td>
									<div class="d-flex flex-row  justify-content-center">
										<%= button_to "Show", dog_path(record.uuid),method: :get, class: "btn btn-info me-1" %>
										<%= button_to "Archive", dog_path(record.uuid),method: :delete,data: {turbo_confirm: 'Are you sure you want to archive this record?'}, class: "btn btn-danger"  %>
									</div>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<div class="graph-container col-4 p-4 h-100">
			<div class="col-12 h-100" ></div>
		</div>
	</div>
</div>